@{
    ViewData["Title"] = "Welcome";
}

<div class="container d-flex flex-column justify-content-start align-items-center vh-100 pt-5">
    <div class="text-center mb-5 mt-5">
        <h1 class="display-4">Welcome to BlogApp</h1>
        <p class="lead">Choose how you'd like to continue</p>
    </div>

    <div class="d-grid gap-3 col-6 mx-auto">
        <a asp-action="Login" asp-controller="Auth" class="btn btn-primary btn-lg">Login</a>
        <a asp-action="Register" asp-controller="Auth" class="btn btn-success btn-lg">Register</a>
        <a asp-action="GuestAccess" asp-controller="Auth" class="btn btn-secondary btn-lg">Continue as Guest</a>
    </div>
</div>
